rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Par défaut, verrouillez l'accès à toutes les données.
    // Adaptez ces règles à vos besoins spécifiques.
    match /{document=**} {
      allow read, write: if false;
    }

